{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "appearanceTools": true,
    "color": {
      "palette": [
        {
          "slug": "primary",
          "color": "#0071E3",
          "name": "Primary"
        },
        {
          "slug": "text",
          "color": "#222222",
          "name": "Text"
        },
        {
          "slug": "background",
          "color": "#f8f9fa",
          "name": "Background"
        },
        {
          "slug": "white",
          "color": "#ffffff",
          "name": "White"
        }
      ],
      "defaultPalette": false,
      "defaultGradients": false,
      "defaultDuotone": false
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "'Inter', system-ui, -apple-system, sans-serif",
          "name": "Inter",
          "slug": "inter",
          "fontFace": [
            {
              "fontFamily": "Inter",
              "fontWeight": "100 900",
              "fontStyle": "normal",
              "src": [ "https://rsms.me/inter/inter.css" ]
            }
          ]
        }
      ],
      "customFontSize": false,
      "fontSizes": [
        { "name": "Small", "slug": "small", "size": "0.875rem" },
        { "name": "Normal", "slug": "normal", "size": "1rem" },
        { "name": "Medium", "slug": "medium", "size": "1.125rem" },
        { "name": "Large", "slug": "large", "size": "1.25rem" },
        { "name": "XL", "slug": "xl", "size": "1.5rem" }
      ]
    },
    "layout": {
      "contentSize": "840px",
      "wideSize": "1200px"
    },
    "spacing": {
      "units": [ "px", "rem", "em", "vh", "vw" ],
      "blockGap": true
    },
    "border": {
      "radius": "8px"
    },
    "shadow": {
      "presets": [
        {
          "name": "Soft",
          "slug": "soft",
          "shadow": "0 4px 12px rgba(0, 0, 0, 0.08)"
        },
        {
          "name": "Hover",
          "slug": "hover",
          "shadow": "0 8px 24px rgba(0, 0, 0, 0.12)"
        }
      ]
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--background)",
      "text": "var(--wp--preset--color--text)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--inter)",
      "fontSize": "var(--wp--preset--font-size--normal)",
      "lineHeight": "1.6"
    },
    "elements": {
      "button": {
        "color": {
          "background": "var(--wp--preset--color--primary)",
          "text": "#ffffff"
        },
        "border": {
          "radius": "8px"
        },
        "typography": {
          "fontWeight": "600"
        },
        ":hover": {
          "color": {
            "background": "#005bb5"
          }
        }
      },
      "h1": { "typography": { "fontSize": "2rem", "fontWeight": "700" } },
      "h2": { "typography": { "fontSize": "1.5rem", "fontWeight": "600" } },
      "h3": { "typography": { "fontSize": "1.25rem", "fontWeight": "600" } }
    },
    "blocks": {
      "core/button": {
        "border": { "radius": "8px" },
        "spacing": { "padding": { "top": "12px", "bottom": "12px", "left": "24px", "right": "24px" } }
      },
      "woocommerce/product-image": {
        "border": { "radius": "8px" }
      },
      "woocommerce/product-price": {
        "typography": { "fontWeight": "600" }
      }
    },
    "spacing": {
      "padding": { "top": "0", "bottom": "0" },
      "margin": { "top": "0", "bottom": "0" }
    }
  },
  "templateParts": [
    {
      "name": "header",
      "title": "Header",
      "area": "header"
    },
    {
      "name": "footer",
      "title": "Footer",
      "area": "footer"
    }
  ]
}